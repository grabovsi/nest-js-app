pipeline {
     agent any
     triggers {
        pollSCM('* * * * *')
     }
     stages {
        stage("Checkout") {
               steps {
                    git url: 'https://github.com/grabovsi/nest-js-app.git'
               }
        }
        stage("npm install + lint") {
            steps {
                bat "npm install"
                }
        }

        stage("Code coverage") {
            steps {
                bat "npm run test:cov"
                publishHTML (target: [
                    reportDir: 'coverage/lcov-report',
                    reportFiles: 'index.html',
                    reportName: "Jest test coverage report"
                ])

        }
        }

        stage("Static code analysis") {
        steps {
                bat " echo 'Hi'"
            }
        }

        stage("unit tests") {
            steps {
                bat "npm run test"
                }
        }  
        stage("e2e tests") {
            steps {
                bat "npm run test:e2e"
                }
        }

        stage("Docker build") {
            steps {
                bat "docker build -t web_app_build_$BUILD_NUMBER ."
                //
            }        
        }      

     }
}